<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:layout_editor_absoluteY="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/name_surname"
                android:theme="@style/TextTitle"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="Name"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/input_regis_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:padding="6dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginEnd="30dp"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="Surname"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/input_regis_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:padding="6dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginEnd="30dp"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/email_password"
                android:textColor="@color/Deepblue"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="Email"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/input_regis_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:padding="6dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginEnd="30dp"
                android:inputType="textEmailAddress|textNoSuggestions"
                android:maxLines="1"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="Password"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/input_regis_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:padding="6dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginEnd="30dp"
                android:inputType="textPassword"
                android:maxLength="9"
                android:maxLines="1"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Phone Number"
                android:textColor="@color/Deepblue"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:text="Prefix"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/input_regis_prefix"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:padding="6dp"
                        android:background="@drawable/custom_edittext"
                        android:layout_marginEnd="30dp"
                        android:maxLines="1"
                        android:maxLength="3"
                        android:inputType="phone"
                        android:digits="0123456789+"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/Aqua"
                        android:textColorLink="@color/Lightgrey" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Phone Number"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/input_regis_phone"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:padding="6dp"
                        android:background="@drawable/custom_edittext"
                        android:digits="0123456789"
                        android:maxLength="9"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textColor="@color/black" />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/ic_input_custom"
                android:text="Suscribe "
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>