<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/Deepblue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="Sign up to HealtCare"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="40dp"
        tools:layout_editor_absoluteY="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:hint="@string/name_surname"
                style="@style/Theme.HealtyApplication.NoActionBar"
                android:textColor="@color/Deepblue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:hint="Name"
                android:textColor="@color/Lightgrey"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/input_regis_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="30dp"
                android:hint="Samuel"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHighlight="@color/Red"
                android:textColorLink="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:hint="Surname"
                android:textColor="@color/Lightgrey"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/input_regis_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="30dp"
                android:hint="Jackson"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHighlight="@color/Aqua"
                android:textColorLink="@color/Lightgrey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:hint="@string/email_password"
                android:textColor="@color/Deepblue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:hint="Email"
                android:textColor="@color/Lightgrey"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/input_regis_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="30dp"
                android:hint="samuel.jackson@gmail.com"
                android:inputType="textEmailAddress|textNoSuggestions"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHighlight="@color/Aqua"
                android:textColorLink="@color/Lightgrey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:hint="Password"
                android:textColor="@color/Lightgrey"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/input_regis_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="30dp"
                android:hint="xxx"
                android:inputType="textPassword"
                android:maxLength="9"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHighlight="@color/Aqua"
                android:textColorLink="@color/Lightgrey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:hint="Phone Number"
                android:textColor="@color/Deepblue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:hint="Prefix"
                        android:textColor="@color/Lightgrey"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/input_regis_prefix"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginEnd="30dp"
                        android:hint="+33"
                        android:maxLines="1"
                        android:maxLength="3"
                        android:inputType="phone"
                        android:digits="0123456789+"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/Aqua"
                        android:textColorLink="@color/Lightgrey" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="195dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="Phone Number"
                        android:textColor="@color/Lightgrey"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/input_regis_phone"
                        android:layout_width="265dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:layout_marginEnd="30dp"
                        android:hint="634236750"
                        android:digits="0123456789"
                        android:maxLength="9"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/Aqua"
                        android:textColorLink="@color/Lightgrey" />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/ic_input_custom"
                android:onClick="signUpUser"
                android:text="Suscribe "
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>