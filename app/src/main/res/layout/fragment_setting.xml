<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutSetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/textInformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/Deepblue"
                        android:text="@string/pref_header_about"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textUserFirst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/black"
                        android:text="@string/summary_about" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="100dp"
                        android:background="@color/Deepblue"/>

                    <TextView
                        android:id="@+id/textPrivacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="115dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/black"
                        android:text="@string/privacy_policy" />

                    <TextView
                        android:id="@+id/textTerms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="155dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/black"
                        android:text="@string/title_terms" />

                    <TextView
                        android:id="@+id/textFAQ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="195dp"

                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:text="@string/title_faq" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="235dp"
                        android:background="@color/Deepblue"/>

                    <TextView
                        android:id="@+id/textNotification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="250dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/Deepblue"
                        android:text="@string/title_notification"
                        android:textSize="20sp" />

                    <Switch
                        android:id="@+id/switchNotification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="300dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="5dp"
                        android:theme="@style/SwitchModeCustom"
                        android:text="@string/text_enable_notif"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                    <Switch
                        android:id="@+id/switchSound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="345dp"
                        android:text="@string/title_sound"
                        android:theme="@style/SwitchModeCustom"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                    <Switch
                        android:id="@+id/switchVibration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="390dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/title_vibration"
                        android:theme="@style/SwitchModeCustom"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="235dp"
                        android:background="@color/Deepblue"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="430dp"
                        android:background="@color/Deepblue"/>


                    <TextView
                        android:id="@+id/texttitleFeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/Deepblue"
                        android:layout_marginTop="445dp"
                        android:text="@string/title_feedback"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textFeedBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="475dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:text="@string/title_send_feedback"/>

                    <TextView
                        android:id="@+id/text_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="520dp"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:layout_marginEnd="20dp"
                        android:text="@string/app_version"/>


                </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>