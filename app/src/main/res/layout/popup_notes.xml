<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#E1EAECED"
    android:theme="@style/Theme.HealtyApplication">

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Add your personal notes"
    android:textColor="@color/Deepblue"
    android:textSize="18sp"
    android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Title"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/input_notes_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="30dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:text="Description"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/input_notes_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="30dp"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:isScrollContainer="true"
        android:maxLines="4"
        android:gravity="top|left"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/button_notes_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/ic_input_custom"
        android:gravity="center"
        android:text="Save"
        android:textColor="@color/white" />

</RelativeLayout>